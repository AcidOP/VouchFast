enum Plan {
  FREE
  PAID
}

enum Status {
  PENDING
  ACCEPTED
  REJECTED
}

enum TestimonialSource {
  TEXT
  VIDEO
  TWITTER
}

model Proposal {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name    String
  email   String
  message String?
  url     String

  status    Status   @default(PENDING)
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

model Testimonial {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  name        String
  source      TestimonialSource @default(TEXT)
  message     String?
  videoUrl    String?
  twitterLink String?

  approved  Boolean  @default(false)
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}
